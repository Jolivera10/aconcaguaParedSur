---
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import Whatsapp from  '~/components/widgets/Whatsapp.astro';
import Hero4 from '~/components/widgets/Hero4.astro';


export interface Props {
	title: string;
}



const metadata = {
  title: 'Aconcagua Pared Sur',
  ignoreTitleTemplate: true,
  
};
---

<Layout metadata={metadata}>

  <!-- Hero Widget ******************* -->
  <Whatsapp
  images={[
    {
      src: '~/assets/images/WhatsApp_icon.png',
      alt: 'Centro',
    }
  ]}
/>

  <Hero4
  
  >
  
    <Fragment slot="title">
      Visitá 
      <span class="text-accent dark:text-white highlight"> Aconcagua</span>
      <span class="hidden xl:inline">con Pared Sur Expediciones.</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="sm:inline">
        Nuestro equipo profesional de campamenteros, guías y porters te ofrece apoyo personalizado
        y seguridad en cada paso. Seas principiante o experimentado, <span class="font-semibold">Aconcagua Pared Sur</span> te llevará a
        la cima de América. ¡Uníte a nosotros!
        </span
      >
    </Fragment>
  </Hero4>


 

  <!-- Note Widget ******************* -->


  

  <!-- Features Widget *************** -->

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="¡Elegí tu aventura para esta temporada!"
    title="Expediciones, trekkings y servicios especializados de excelencia"
    items={[
      {
        title: 'Ruta Normal',
        description:
          'Alcanzá la cumbre del cerro más alto de América con nuestro programa que incluye trekking a Plaza Francia para aclimatar.',
          link: '/ruta-normal'
      },
      {
        title: 'Ruta 360º',
        description:
          'Descubrí dos facetas del Aconcagua con nuestra ruta que abarca la cara este y noroeste. Experimentá ascender a través del valle de Vacas y descender por la ruta normal, disfrutando plenamente de la majestuosidad de la montaña más alta de América.',
          link: '/ruta-360'
      },
      {
        title: 'Ruta Polacos',
        description:
          'Experimentá más allá del trekking a Plaza Francia. Con nuestra Ruta Normal Extendida, conquistá el cerro Bonete (5000m) como parte de la aclimatación para alcanzar la cumbre del Aconcagua.',
          link: '/glaciar-polacos'
      },
    
      {
        title: 'Ruta Falso Polacos',
        description:
          'Conquistá el lado más rústico del Aconcagua a través de esta ruta menos transitada que la normal.',
          link: '/falso-polacos'
      },
      
    ]}
    image={{
      src: '~/assets/images/imagen1.png',
      alt: 'Imagen1',
    }}
  >
    <Fragment slot="content">
      <a class="h1_servicios" href="/homes/expediciones"><h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Expediciones</h3></a>
      Logística excelente y ocupada en cada detalle. 
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Trekking Corto - Plaza Francia',
        description: `Explorá los glaciares de Plaza Francia (4100 msnm), en la base de la impresionante Pared Sur Sur del Aconcagua.`,
        link: '/trekking_corto'
      },
      {
        title: 'Trekking Largo - Plaza de Mulas',
        description:
          'Visitá Plaza Francia y Plaza de Mulas (4300 msnm), donde podrás presenciar la preparación de los escaladores para la cumbre.',
          link: '/trekking_largo'
      },
      {
        title: 'Trekking Valle de Lágrimas - Avión de los Uruguayos',
        description: `Viví una experiencia de película en el lugar la tragedia de los uruguayos en los Andes.`,
        link: '/trekking_avion'
      },
      
    ]}
    image={{
      src: '~/assets/images/imagen2.jpg',
      alt: 'Trekking Image',
    }}
  >
  <Fragment slot="content">
    <a class="h1_servicios" href="/homes/trekkings"><h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Trekkings</h3></a>
    Experiencias magníficas y emocionantes
  </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
       {
        title: 'Servicios en Ciudad de Mendoza',
        description:
          '',
          icon: 'tabler:building',
        },
        {
        title: 'Transporte',
        description:
          '',
          icon: 'tabler:car',
        },
        {
        title: 'Servicios en penitentes',
        description:
          '',
          icon: 'tabler:mountain',
        },
        {
        title: 'Mulas para transporte',
        description:
          '',
          icon: 'tabler:horse',
        },
        {
        title: 'Servicios en campamentos base',
        description:
          '',
          icon: 'tabler:mountain',
        },
      {
        title: 'Servicios en campamentos de altura',
        description:
          '',
          icon: 'tabler:home',
      },
      {
        title: 'Servicio de porteadores',
        description:
          '',
          icon: 'tabler:shoe',
        },
        {
        title: 'Asesoramiento y comunicación',
        description:
          '',
          icon: 'tabler:phone',
        },
      
        {
        title: 'Gestión de permisos oficiales',
        description:
          '',
          icon: 'tabler:pencil',
        },
      
       
    
    ]}
    image={{
      src: '~/assets/images/imagen3.png',
      alt: 'Imagen Massages',
    }}
  >
  <Fragment slot="content">
    <a class="h1_servicios" href="/homes/servicios"><h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Servicios logísticos</h3> </a>
    Disfrutá la experiencia, nosotros nos encargamos del resto. Somos especialistas en Aconcagua desde hace más de 25 años!

  </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->


  <!-- Features2 Widget ************** -->


    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>

  <!-- HighlightedPosts Widget ******* -->


</Layout>

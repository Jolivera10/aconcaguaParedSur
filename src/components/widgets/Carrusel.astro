---
import { Carousel } from 'astro-bootstrap';
import "bootstrap/dist/css/bootstrap.min.css";
import type { CarouselSlideType } from 'astro-bootstrap';

const slides: CarouselSlideType[] = [
  { img: '/src/assets/images/bg2.png', alt: 'First placeholder', active: true },
  { img: '/src/assets/images/avion.png', alt: 'Second placeholder' },
  { img: '/src/assets/images/bg2.png', alt: 'Third placeholder' },
  
];

const id = 'carouselExampleBasic';
---

<Carousel class='carru'  {id} fade>
  <Carousel.Indicators {id} {slides} />
  <Carousel.Inner>
    {
      slides.map((slide) => (
        <Carousel.Item active={slide.active}>
          <img
            src={slide.img}
            class="d-block w-100 img-fluid"
            alt={slide.alt}
          />
        </Carousel.Item>
      ))
    }
  </Carousel.Inner>
  <Carousel.Controls id={id} />
  <script>
    // Astro will bundle and process this automatically
    import 'bootstrap/dist/js/bootstrap.bundle.min.js'
  </script>
</Carousel>